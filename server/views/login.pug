extends ./base

block styles

block content
  div.login-container
    h1.title Tandem API Gateway
    div.login-form
      form(method='POST', action='/auth/dashboard')
        div.login-form-input.username
          input(type='email', name='email', placeholder="Email" required)
        div.login-form-input.password
          input(type='password', name='password', placeholder="Password" required)
        button.login-button Log in

    div.signup-link-container
      a.signup-link(href='/auth/signup') Sign up for access 